# Port Configuration (optional - defaults to 3000)
# PORT=3002

# Supabase Configuration (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Google Maps API (required for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=[your_google_maps_api_key]

# Payment Configuration (required for checkout)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_[your_paystack_public_key]
PAYSTACK_SECRET_KEY=sk_test_[your_paystack_secret_key]
WEBHOOK_SECRET_PAYSTACK=[your_webhook_secret]

# Security Configuration (required)
JWT_SECRET=[your_jwt_secret_32_chars_minimum]
INTERNAL_AUTH_SECRET=[your_internal_auth_secret]
ADMIN_SECRET_KEY=[your_admin_secret_key]

# Email Service (optional)
RESEND_API_KEY=re_[your_resend_key]

# SMS Service (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email & SMS Configuration (handled by Supabase Auth)
# Configure email templates and SMS in Supabase Dashboard:
# - Authentication > Settings > Email Templates
# - Authentication > Settings > SMS (if available in region)

# Optional External URLs
NEXT_PUBLIC_ORDER_URL=https://app.usefoodnow.com
NEXT_PUBLIC_RIDER_URL=https://riders.usefoodnow.com

# Environment
NODE_ENV=development